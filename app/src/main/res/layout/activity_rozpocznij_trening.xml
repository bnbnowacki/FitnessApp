<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marcin.fitnessapp.RozpocznijTreningActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obliczenia: "
        android:textSize="30sp"
        android:id="@+id/textViewNaglowek"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTresc"
        android:textSize="16sp"
        android:layout_below="@id/textViewNaglowek"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textKalorie"
        android:textSize="20sp"
        android:layout_below="@id/textViewTresc"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZakoÅ„cz trening"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textKalorie"
        android:onClick="ClickZakonczTrening"/>

</RelativeLayout>
